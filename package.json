{
  "name": "buildservice",
  "description": "Origami build service",
  "version": "3.0.2",
  "homepage": "http://build.origami.ft.com/",
  "keywords": [
    "origami"
  ],
  "private": true,
  "license": "Â©FT",
  "bugs": {
    "url": "https://github.com/Financial-Times/origami-build-service/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Financial-Times/origami-build-service.git"
  },
  "scripts": {
    "start": "node index.js",

    "test": "npm run test-unit && npm run test-integration && npm run test-old",
    "test-old": "NODE_ENV=test ./node_modules/.bin/mocha ./test",
    "test-unit": "NODE_ENV=test ./node_modules/.bin/mocha ./test/unit --recursive",
    "test-integration": "NODE_ENV=test ./node_modules/.bin/mocha ./test/integration",
    "test-instrument": "NODE_ENV=test ./node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha -- ./test/unit --recursive",
    "test-coverage": "npm run test-instrument && ./node_modules/.bin/istanbul check-coverage --statement 90 --branch 90 --function 90",
    "lint": "./node_modules/.bin/eslint .",

    "build": "docker build -t registry.heroku.com/origami-buildservice-rowan-qa/web .",
    "deploy": "docker push registry.heroku.com/origami-buildservice-rowan-qa/web"
  },
  "dependencies": {
    "blocked": "^1.1.0",
    "bower": "1.3.12",
    "bower-endpoint-parser": "^0.2.2",
    "bunyan": "^1.5.1",
    "cheerio": "^0.17.0",
    "commander": "^2.3.0",
    "diskspace": "git+http://github.com/Financial-Times/diskspace.js.git",
    "express": "^4.12.3",
    "express-ftwebservice": "^2.0.2",
    "glob": "^4.0.5",
    "graphite": "0.0.6",
    "gulp": "^3.9.0",
    "lru-cache": "^2.6.5",
    "measured": "^1.0.0",
    "mime": "^1.2.11",
    "mkdirp": "^0.5.1",
    "morgan": "^1.6.1",
    "origami-build-tools": "^5.0.0",
    "q": "^1.0.1",
    "q-io": "^1.12.0",
    "raven": "^0.8.1",
    "rimraf": "^2.3.2",
    "semver": "^4.3.1",
    "streamcat": "^2.0.0",
    "tryall": "^1.0.1",
    "uid-number": "0.0.6",
    "uuid": "^1.4.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^2.2.0",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "mockery": "^1.4.0",
